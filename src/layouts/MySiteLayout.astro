---
import MyNavbar from "../components/MyNavbar.vue";
import MySidebar from "./MySidebar.vue";
import MyContentArea from "./MyContentArea.vue";
import MyMap from '../components/MyMap.vue';

const response = await fetch('https://api.airtable.com/v0/appX0BK9SmJSDDmQp/Community%20Bike%20Repair%20Stations?maxRecords=100&view=Export', {
        method: 'GET',
        credentials: 'include',
        headers: {
            'Authorization': 'Bearer REDACTED_PRIVATE_KEY',
            'Content-Type': 'application/json'
        }
    });

    const remote_data = await response.json();

---

<html>
    <head>
        <meta charset="utf-8">
        <title>NYC Bike Repair Stations</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <header>
            <MyNavbar client:only />
        </header>
        <div class="flex h-full w-screen">
            <MySidebar remote_data={remote_data} />
            <MyContentArea>
                <MyMap client:only remote_data={remote_data}></MyMap>
            </MyContentArea>
        </div>
    </body>
</html>